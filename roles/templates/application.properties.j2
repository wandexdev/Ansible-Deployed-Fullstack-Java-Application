spring.application.name=hng-java-boilerplate

# datasource configuration
spring.datasource.url=jdbc:postgresql://localhost:5432/hngdatabase
spring.datasource.username=wandexdev
spring.datasource.password=hngpassword
spring.jpa.hibernate.ddl-auto=validate

# migration configuration
spring.flyway.enabled=true
spring.flyway.baseline-on-migrate=true
spring.flyway.location=classpath:db/migration
spring.flyway.url=jdbc:postgresql://localhost:5432/hngdatabase
spring.flyway.user=wandexdev
spring.flyway.password=hngpassword
spring.flyway.baseline-version=1

###port 
server.port=3000

#Database Connection pooling
spring.datasource.hikari.minimum-idle=5
spring.datasource.hikari.maximum-pool-size=20
spring.datasource.hikari.idle-timeout=30000
spring.datasource.hikari.pool-name=HikariCP
spring.datasource.hikari.max-lifetime=1800000
spring.datasource.hikari.connection-timeout=20000
spring.datasource.hikari.leak-detection-threshold=15000

#configures Spring Boot to throw an exception if no handler is found for a request
spring.mvc.throw-exception-if-no-handler-found=true
spring.web.resources.add-mappings=false

#Logging
spring.main.banner-mode=off
logging.pattern.console = ${LOGGING_PATTERN: %green(%d{HH:mm:ss.SSS}) %blue(%-5level) %red([%thread]) %yellow(%logger{15})- %msg%n}

#Swagger doc
springdoc.swagger-ui.path=/docs
springdoc.api-docs.servers[0].url=http://localhost/
springdoc.api-docs.servers[0].description=Production Server
springdoc.api-docs.servers[1].url=http://localhost/
springdoc.api-docs.servers[1].description=Staging Server
springdoc.api-docs.servers[2].url=http://localhost
springdoc.api-docs.servers[2].description=Deployment Server

# RabbitMQ configuration
spring.rabbitmq.host=localhost
spring.rabbitmq.port=5672
spring.rabbitmq.username=wandexdev
spring.rabbitmq.password=guest
rabbitmq.queue.email=emailQueue
spring.rabbitmq.exchange.key=exchange_key
spring.rabbitmq.routing.key=routing_key

## twilio configuration
spring.twilio.account.sid=
spring.twilio.auth.token=
spring.twilio.outgoing.sms.number=

# email configuration
spring.mail.host=smtp.gmail.com

